# =============================================================================
# RabbitMQ Configuration
# =============================================================================
# Copy to .env: cp .env.example .env
# Generate passwords: openssl rand -base64 24
#
# Vhosts/users are managed via: ./manage.sh
# =============================================================================

# Admin credentials (REQUIRED - auto-generated by setup.sh)
RABBITMQ_ADMIN_USER=admin
RABBITMQ_ADMIN_PASS=

# Erlang cookie for clustering (REQUIRED - auto-generated by setup.sh)
RABBITMQ_ERLANG_COOKIE=

# Ports
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_METRICS_PORT=15692

# Resource limits
RABBITMQ_CPU_LIMIT=2
RABBITMQ_MEMORY_LIMIT=1G
RABBITMQ_MEMORY_RESERVATION=512M

# Traefik integration (optional)
RABBITMQ_TRAEFIK_ENABLE=false
RABBITMQ_DOMAIN=rabbitmq.example.com

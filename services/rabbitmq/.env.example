# =============================================================================
# RabbitMQ Configuration
# =============================================================================

# Admin credentials (REQUIRED)
# Generate password: openssl rand -base64 24
RABBITMQ_ADMIN_USER=admin
RABBITMQ_ADMIN_PASS=

# Erlang cookie for clustering (REQUIRED)
# Generate: openssl rand -hex 32
RABBITMQ_ERLANG_COOKIE=

# Ports
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_METRICS_PORT=15692
# RABBITMQ_MQTT_PORT=1883
# RABBITMQ_STOMP_PORT=61613

# Resource limits
RABBITMQ_CPU_LIMIT=2
RABBITMQ_MEMORY_LIMIT=2G
RABBITMQ_MEMORY_RESERVATION=512M

# Memory watermark (percentage of RAM before flow control)
RABBITMQ_MEMORY_WATERMARK=0.7

# Traefik integration (optional)
RABBITMQ_TRAEFIK_ENABLE=false
RABBITMQ_DOMAIN=rabbitmq.example.com

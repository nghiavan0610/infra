# =============================================================================
# GlitchTip Configuration
# =============================================================================
# Sentry-compatible error tracking with ARM64 support
# =============================================================================

# Secret key (generate with: openssl rand -hex 32)
GLITCHTIP_SECRET_KEY=

# Port
GLITCHTIP_PORT=8000

# Domain (for links in emails and DSN generation)
GLITCHTIP_DOMAIN=http://localhost:8000

# =============================================================================
# Database (uses shared PostgreSQL)
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
GLITCHTIP_DB_NAME=glitchtip

# =============================================================================
# Redis (uses shared Redis)
# =============================================================================
REDIS_HOST=redis-cache
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# Email (optional - for user invitations and alerts)
# =============================================================================
# Console (development - prints to logs):
EMAIL_URL=consolemail://

# SMTP example:
# EMAIL_URL=smtp://user:password@smtp.example.com:587

# Mailpit (local testing):
# EMAIL_URL=smtp://mailpit:1025

DEFAULT_FROM_EMAIL=glitchtip@localhost

# =============================================================================
# Traefik (optional)
# =============================================================================
# Uncomment and set domain for HTTPS access
# GLITCHTIP_DOMAIN=glitchtip.example.com

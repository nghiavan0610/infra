# =============================================================================
# WireGuard VPN Configuration
# =============================================================================

# Your server's public IP or domain (REQUIRED)
# Use 'auto' to auto-detect, but setting manually is more reliable
SERVERURL=auto

# VPN port (make sure firewall allows UDP on this port)
SERVERPORT=51820

# Number of client configs to generate
# Each peer gets their own config file
PEERS=3

# DNS servers for VPN clients
PEERDNS=1.1.1.1,8.8.8.8

# Internal VPN subnet
INTERNAL_SUBNET=10.13.13.0

# What traffic goes through VPN
# Default: Only VPN subnet + Docker network (split tunnel)
# Use 0.0.0.0/0 for full tunnel (all traffic through VPN)
ALLOWEDIPS=10.13.13.0/24,172.17.0.0/16

# Keep alive interval (helps with NAT)
PERSISTENTKEEPALIVE=25

# =============================================================================
# Kafka Configuration
# =============================================================================

# Cluster identity (generate unique ID: kafka-storage.sh random-uuid)
KAFKA_CLUSTER_ID=MkU3OEVBNTcwNTJENDM2Qk
KAFKA_CLUSTER_NAME=production
KAFKA_NODE_ID=1

# Ports
KAFKA_EXTERNAL_PORT=9092
KAFKA_INTERNAL_PORT=9094
KAFKA_UI_PORT=8090
KAFKA_EXPORTER_PORT=9308

# Advertised host (set to your server's public IP or domain)
KAFKA_ADVERTISED_HOST=localhost
# KAFKA_ADVERTISED_HOST=203.0.113.50
# KAFKA_ADVERTISED_HOST=kafka.example.com

# Authentication (uncomment for production)
# KAFKA_EXTERNAL_PROTOCOL=SASL_PLAINTEXT
# KAFKA_CLIENT_USERS=admin,app,monitoring
# KAFKA_CLIENT_PASSWORDS=CHANGE_ME_ADMIN,CHANGE_ME_APP,CHANGE_ME_MONITOR

# Topic defaults
KAFKA_DEFAULT_PARTITIONS=3
KAFKA_DEFAULT_REPLICATION=1
KAFKA_MIN_ISR=1
KAFKA_AUTO_CREATE_TOPICS=false

# Replication factors (single node = 1)
KAFKA_OFFSETS_REPLICATION=1
KAFKA_TXN_REPLICATION=1
KAFKA_TXN_MIN_ISR=1

# Log retention
KAFKA_RETENTION_HOURS=168
KAFKA_RETENTION_BYTES=1073741824
KAFKA_SEGMENT_BYTES=1073741824

# Performance tuning
KAFKA_IO_THREADS=8
KAFKA_NETWORK_THREADS=3
KAFKA_MAX_MESSAGE_SIZE=10485760

# Memory (recommended: 50% of container memory)
KAFKA_HEAP_OPTS=-Xmx2G -Xms2G

# Resource limits
KAFKA_CPU_LIMIT=4
KAFKA_MEMORY_LIMIT=4G

# Kafka UI
KAFKA_UI_AUTH_TYPE=DISABLED
# KAFKA_UI_AUTH_TYPE=LOGIN_FORM
# KAFKA_UI_USER=admin
# KAFKA_UI_PASSWORD=

# Traefik integration (optional)
KAFKA_TRAEFIK_ENABLE=false
KAFKA_UI_DOMAIN=kafka.example.com

# =============================================================================
# Gitea Configuration
# =============================================================================

# Database configuration (uses dedicated postgres by default)
GITEA_DB_TYPE=postgres
GITEA_DB_HOST=gitea-db:5432
GITEA_DB_NAME=gitea
GITEA_DB_USER=gitea
GITEA_DB_PASSWORD=

# Server configuration
GITEA_ROOT_URL=http://localhost:3000
GITEA_SSH_DOMAIN=localhost
GITEA_HTTP_PORT=3000
GITEA_SSH_PORT=2222

# Security keys (generate with: openssl rand -hex 32)
GITEA_SECRET_KEY=
GITEA_INTERNAL_TOKEN=

# Registration settings
GITEA_DISABLE_REGISTRATION=false
GITEA_REQUIRE_SIGNIN=false

# Email configuration (optional - uses Mailpit if enabled)
GITEA_MAILER_ENABLED=false
GITEA_SMTP_HOST=mailpit
GITEA_SMTP_PORT=1025
GITEA_MAIL_FROM=gitea@localhost

# Domain for Traefik (if exposing publicly)
# GITEA_DOMAIN=git.example.com

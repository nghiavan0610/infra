# =============================================================================
# Ntfy Configuration
# =============================================================================

# Base URL (your ntfy server URL)
NTFY_BASE_URL=http://localhost:8090

# Port configuration
NTFY_PORT=8090

# Timezone
TZ=UTC

# Cache duration for messages
NTFY_CACHE_DURATION=12h

# Default access (read-write, read-only, write-only, deny-all)
NTFY_AUTH_DEFAULT_ACCESS=read-write

# Enable user login/signup
NTFY_ENABLE_LOGIN=true
NTFY_ENABLE_SIGNUP=false

# Set to true if behind Traefik/reverse proxy
NTFY_BEHIND_PROXY=false

# Upstream server for iOS push notifications
NTFY_UPSTREAM_BASE_URL=https://ntfy.sh

# Domain for Traefik (if exposing publicly)
# NTFY_DOMAIN=ntfy.example.com

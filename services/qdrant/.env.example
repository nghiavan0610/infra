# =============================================================================
# Qdrant Vector Database Configuration
# =============================================================================

# API Key (optional but recommended for production)
# Generate: openssl rand -base64 32
QDRANT_API_KEY=

# Ports
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# Logging
QDRANT_LOG_LEVEL=INFO

# Performance
QDRANT_CPU_LIMIT=2
QDRANT_MEMORY_LIMIT=2G
QDRANT_MEMORY_RESERVATION=512M

# Search threads (0 = auto, use all CPUs)
QDRANT_MAX_SEARCH_THREADS=0

# Indexing thresholds
QDRANT_INDEXING_THRESHOLD=20000
QDRANT_MEMMAP_THRESHOLD=50000

# TLS (set to true if using certificates)
QDRANT_ENABLE_TLS=false

# Traefik integration
QDRANT_TRAEFIK_ENABLE=false
QDRANT_DOMAIN=qdrant.example.com

# =============================================================================
# Docker Registry Configuration
# =============================================================================

# Registry port
REGISTRY_PORT=5000

# UI port (optional web interface)
REGISTRY_UI_PORT=5001

# Authentication (generate with: htpasswd -Bn username)
REGISTRY_USER=admin
REGISTRY_PASSWORD=change-me

# Storage backend
# Option 1: Local filesystem (default)
REGISTRY_STORAGE=filesystem

# Option 2: S3/Garage (uncomment and configure)
# REGISTRY_STORAGE=s3
# REGISTRY_S3_BUCKET=docker-registry
# REGISTRY_S3_REGION=garage
# REGISTRY_S3_ENDPOINT=http://garage:3900
# REGISTRY_S3_ACCESS_KEY=your-access-key
# REGISTRY_S3_SECRET_KEY=your-secret-key

# Storage limit (for cleanup)
REGISTRY_STORAGE_DELETE_ENABLED=true

# Resource limits
MEMORY_LIMIT=512m
CPU_LIMIT=1

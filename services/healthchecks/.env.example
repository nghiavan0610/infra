# =============================================================================
# Healthchecks Configuration
# =============================================================================
# Uses shared PostgreSQL service
# =============================================================================

# =============================================================================
# Site settings
# =============================================================================
HEALTHCHECKS_SITE_ROOT=http://localhost:8002
HEALTHCHECKS_SITE_NAME=Healthchecks
HEALTHCHECKS_FROM_EMAIL=healthchecks@localhost

# Secret key (required - generate with: openssl rand -base64 32)
HEALTHCHECKS_SECRET_KEY=

# Port configuration (8002 to avoid conflict with Plausible/faster-whisper)
HEALTHCHECKS_PORT=8002

# =============================================================================
# Shared PostgreSQL (uses main postgres service)
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
HEALTHCHECKS_DB_NAME=healthchecks

# =============================================================================
# Features
# =============================================================================
# Registration (set to false after creating admin)
HEALTHCHECKS_REGISTRATION_OPEN=false

# Ping endpoint (for display in UI)
HEALTHCHECKS_PING_ENDPOINT=http://localhost:8002/ping/

# =============================================================================
# Email Configuration (optional - for notifications)
# =============================================================================
# HEALTHCHECKS_EMAIL_HOST=smtp.gmail.com
# HEALTHCHECKS_EMAIL_PORT=587
# HEALTHCHECKS_EMAIL_USER=
# HEALTHCHECKS_EMAIL_PASSWORD=
# HEALTHCHECKS_EMAIL_USE_TLS=True

# =============================================================================
# Integrations (optional)
# =============================================================================
# Slack OAuth App
# HEALTHCHECKS_SLACK_CLIENT_ID=
# HEALTHCHECKS_SLACK_CLIENT_SECRET=

# Discord OAuth App
# HEALTHCHECKS_DISCORD_CLIENT_ID=
# HEALTHCHECKS_DISCORD_CLIENT_SECRET=

# =============================================================================
# Domain for Traefik (if exposing publicly)
# =============================================================================
# HEALTHCHECKS_DOMAIN=healthchecks.example.com

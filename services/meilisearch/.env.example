# =============================================================================
# Meilisearch Configuration
# =============================================================================

# Master key (REQUIRED - generate with: openssl rand -base64 32)
MEILI_MASTER_KEY=

# Environment: production or development
MEILI_ENV=production

# Port
MEILI_PORT=7700

# Performance
MEILI_MAX_INDEXING_MEMORY=1Gb
MEILI_MAX_INDEXING_THREADS=2
MEILI_PAYLOAD_SIZE=100Mb

# Resource limits
MEILI_CPU_LIMIT=2
MEILI_MEMORY_LIMIT=2G
MEILI_MEMORY_RESERVATION=512M

# Logging: ERROR, WARN, INFO, DEBUG, TRACE
MEILI_LOG_LEVEL=INFO

# Traefik integration (optional)
MEILI_TRAEFIK_ENABLE=false
MEILI_DOMAIN=search.example.com

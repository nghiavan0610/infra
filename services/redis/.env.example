# =============================================================================
# Redis Configuration - Cache & Queue
# =============================================================================
# Copy this file to .env and update the values
# DO NOT commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Redis Cache (volatile data, LRU eviction)
# -----------------------------------------------------------------------------
# Use for: API responses, session data, temporary data
REDIS_CACHE_PORT=6379

# Generate with: openssl rand -base64 32
REDIS_CACHE_PASSWORD=CHANGE_ME_CACHE_PASSWORD

# -----------------------------------------------------------------------------
# Redis Queue (persistent data, no eviction)
# -----------------------------------------------------------------------------
# Use for: BullMQ, Bee-Queue, Agenda, job queues
REDIS_QUEUE_PORT=6380

# Generate with: openssl rand -base64 32
REDIS_QUEUE_PASSWORD=CHANGE_ME_QUEUE_PASSWORD

# =============================================================================
# Connection String Examples:
# =============================================================================
#
# Cache (local):
#   redis://:PASSWORD@localhost:6379
#
# Cache (Docker internal):
#   redis://:PASSWORD@redis-cache:6379
#
# Queue (local):
#   redis://:PASSWORD@localhost:6380
#
# Queue (Docker internal):
#   redis://:PASSWORD@redis-queue:6379
#
# With database number:
#   redis://:PASSWORD@localhost:6379/0
#
# =============================================================================
# Backend Usage Examples:
# =============================================================================
#
# Node.js (ioredis):
#   const cacheRedis = new Redis(process.env.REDIS_CACHE_URL);
#   const queueRedis = new Redis(process.env.REDIS_QUEUE_URL);
#
# BullMQ:
#   const queue = new Queue('myQueue', {
#     connection: { host: 'localhost', port: 6380, password: '...' }
#   });
#
# =============================================================================

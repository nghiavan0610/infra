# =============================================================================
# Fail2ban Configuration
# =============================================================================

# Ban time in seconds (default: 1 hour)
BAN_TIME=3600

# Find time window in seconds (default: 10 minutes)
FIND_TIME=600

# Max retries before ban
MAX_RETRY=5

# Ignore IPs (comma-separated, e.g., your office IP)
IGNORE_IP=127.0.0.1/8,::1

# Email for notifications (optional)
# DEST_EMAIL=admin@example.com
# SENDER_EMAIL=fail2ban@example.com

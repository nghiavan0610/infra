# =============================================================================
# Crowdsec Configuration
# =============================================================================

# Crowdsec API port (internal)
CROWDSEC_API_PORT=8080

# Bouncer API key (generate with: openssl rand -base64 32)
BOUNCER_KEY_TRAEFIK=change-me-generate-with-openssl

# Collections to install (space-separated)
COLLECTIONS=crowdsecurity/linux crowdsecurity/traefik crowdsecurity/http-cve crowdsecurity/whitelist-good-actors

# Resource limits
MEMORY_LIMIT=512m
CPU_LIMIT=1

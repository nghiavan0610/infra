# =============================================================================
# LangFuse Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Security (REQUIRED - generate these!)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
LANGFUSE_NEXTAUTH_SECRET=
LANGFUSE_SALT=

# -----------------------------------------------------------------------------
# Database (uses shared PostgreSQL)
# -----------------------------------------------------------------------------
# Generate password: openssl rand -base64 24
LANGFUSE_DB_USER=langfuse
LANGFUSE_DB_PASS=
LANGFUSE_DB_NAME=langfuse

# PostgreSQL admin password (from postgres service)
POSTGRES_PASSWORD=

# -----------------------------------------------------------------------------
# Redis (uses shared Redis, optional but recommended)
# -----------------------------------------------------------------------------
LANGFUSE_REDIS_HOST=redis-cache
LANGFUSE_REDIS_PORT=6379
LANGFUSE_REDIS_AUTH=

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
LANGFUSE_PORT=3050
LANGFUSE_URL=http://localhost:3050

# For production with domain:
# LANGFUSE_URL=https://langfuse.example.com

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Disable password auth (use SSO only)
LANGFUSE_DISABLE_PASSWORD_AUTH=false

# Disable public signup (admin creates users)
LANGFUSE_DISABLE_SIGNUP=false

# -----------------------------------------------------------------------------
# SSO Providers (optional)
# -----------------------------------------------------------------------------
# Google OAuth
# LANGFUSE_GOOGLE_CLIENT_ID=
# LANGFUSE_GOOGLE_CLIENT_SECRET=

# GitHub OAuth
# LANGFUSE_GITHUB_CLIENT_ID=
# LANGFUSE_GITHUB_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# S3 Storage for Large Traces (optional, uses Garage/MinIO)
# -----------------------------------------------------------------------------
# LANGFUSE_S3_BUCKET=langfuse
# LANGFUSE_S3_ENDPOINT=http://garage:3900
# LANGFUSE_S3_ACCESS_KEY=
# LANGFUSE_S3_SECRET_KEY=
# LANGFUSE_S3_REGION=us-east-1

# -----------------------------------------------------------------------------
# Resource Limits
# -----------------------------------------------------------------------------
LANGFUSE_CPU_LIMIT=2
LANGFUSE_MEMORY_LIMIT=2G

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LANGFUSE_LOG_LEVEL=info
LANGFUSE_LOG_FORMAT=json

# Disable telemetry
LANGFUSE_TELEMETRY=false

# -----------------------------------------------------------------------------
# Traefik Integration (optional)
# -----------------------------------------------------------------------------
LANGFUSE_TRAEFIK_ENABLE=false
LANGFUSE_DOMAIN=langfuse.example.com

# =============================================================================
# Dozzle Configuration
# =============================================================================

# Port configuration
DOZZLE_PORT=9999

# Authentication (optional but recommended for production)
# Leave empty for no authentication
DOZZLE_USERNAME=
DOZZLE_PASSWORD=

# Log level (debug, info, warn, error)
DOZZLE_LEVEL=info

# Number of log lines to load initially
DOZZLE_TAILSIZE=300

# Domain for Traefik (if exposing publicly)
# DOZZLE_DOMAIN=logs.example.com

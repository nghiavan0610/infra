# =============================================================================
# Sentry Configuration
# =============================================================================

# Secret key (generate with: openssl rand -hex 32)
SENTRY_SECRET_KEY=

# Port
SENTRY_PORT=9000

# =============================================================================
# Database (uses shared PostgreSQL)
# =============================================================================
POSTGRES_HOST=host.docker.internal
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
SENTRY_DB_NAME=sentry

# =============================================================================
# Redis (uses shared Redis)
# =============================================================================
REDIS_HOST=host.docker.internal
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# Email (uses Mailpit for testing, or configure SMTP for production)
# =============================================================================
SMTP_HOST=host.docker.internal
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=false
SENTRY_EMAIL=sentry@localhost

# =============================================================================
# Traefik (optional)
# =============================================================================
# SENTRY_DOMAIN=sentry.example.com

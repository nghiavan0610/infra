# =============================================================================
# Asynqmon Configuration
# =============================================================================

# Dashboard port
ASYNQMON_PORT=8080

# Redis connection (use redis-queue, NOT redis-cache)
REDIS_ADDR=host.docker.internal:6380
REDIS_DB=0
REDIS_PASSWORD=your_redis_queue_password

# Traefik (optional)
TRAEFIK_ENABLED=false
ASYNQMON_DOMAIN=asynq.example.com
# Generate with: htpasswd -nb admin password
ASYNQMON_AUTH=

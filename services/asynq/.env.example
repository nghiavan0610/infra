# =============================================================================
# Asynqmon Configuration
# =============================================================================

# Dashboard port
ASYNQMON_PORT=8080

# Redis connection (uses redis-queue container on infra network)
REDIS_ADDR=redis-queue:6379
REDIS_DB=0
REDIS_PASSWORD=

# Traefik (optional)
TRAEFIK_ENABLED=false
ASYNQMON_DOMAIN=asynq.example.com
# Generate with: htpasswd -nb admin password
ASYNQMON_AUTH=

{
  "application-logs": {
    "index_patterns": ["app-logs-*"],
    "priority": 100,
    "template": {
      "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 0,
        "index.refresh_interval": "30s",
        "index.codec": "best_compression"
      },
      "mappings": {
        "properties": {
          "@timestamp": {
            "type": "date"
          },
          "level": {
            "type": "keyword"
          },
          "message": {
            "type": "text",
            "analyzer": "standard"
          },
          "service": {
            "type": "keyword"
          },
          "host": {
            "type": "keyword"
          },
          "environment": {
            "type": "keyword"
          }
        }
      }
    }
  },
  "metrics": {
    "index_patterns": ["metrics-*"],
    "priority": 100,
    "template": {
      "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 0,
        "index.refresh_interval": "5s"
      },
      "mappings": {
        "properties": {
          "@timestamp": {
            "type": "date"
          },
          "metric_name": {
            "type": "keyword"
          },
          "value": {
            "type": "double"
          },
          "tags": {
            "type": "object"
          }
        }
      }
    }
  }
}

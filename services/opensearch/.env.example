# =============================================================================
# OpenSearch Configuration
# =============================================================================
# IMPORTANT: OpenSearch requires vm.max_map_count >= 262144
# Run on host: sudo sysctl -w vm.max_map_count=262144
# To persist: echo "vm.max_map_count=262144" | sudo tee -a /etc/sysctl.conf
# =============================================================================

# Cluster name
OPENSEARCH_CLUSTER_NAME=opensearch-cluster

# Admin password (auto-generated by setup.sh if empty)
# Must meet complexity: 8+ chars, uppercase, lowercase, number, special char
OPENSEARCH_ADMIN_PASSWORD=

# Ports
OPENSEARCH_PORT=9200
OPENSEARCH_PERF_PORT=9600
OPENSEARCH_DASHBOARDS_PORT=5601

# Security (set to true to disable security for development/testing)
# When disabled, no authentication required for API access
OPENSEARCH_DISABLE_SECURITY=true

# Performance - JVM heap size (recommend 50% of available RAM, max 32g)
OPENSEARCH_HEAP_SIZE=1g

# Resource limits
OPENSEARCH_CPU_LIMIT=2
OPENSEARCH_MEMORY_LIMIT=2G
OPENSEARCH_MEMORY_RESERVATION=1G

# Traefik integration (optional)
OPENSEARCH_TRAEFIK_ENABLE=false
OPENSEARCH_DOMAIN=opensearch.example.com
